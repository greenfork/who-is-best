<div class="centered">
    <%= render 'form' %>
</div>

<% if @contributors.blank? %>
    <p>Sorry, it looks like this is the wrong link!</p>
<% else %>
    <p>
        Done! You can also download the special certificates that acknowledge the true
        bestness of these beings. Here are the 3 best contributors for this repo:
    </p>
    <% @contributors.each do |c| %>
        <div class="row">
            <div class="three columns">
                <%= c[:name] %>
            </div>
            <div class="nine columns">
                <%= link_to c[:name] + '.pdf', download_path(c[:name]),
                    data: { turbolinks: false } %>
            </div>
        </div>
    <% end %>
    <%= link_to 'download.zip', '#', data: { turbolinks: false } %>
<% end %>
